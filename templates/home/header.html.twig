<div class="header-middle"><!--header-middle-->
	<div class="container">
		<div class="row">
			<div class="col-sm-4">
				<div class="logo pull-left">
					<a href="{{path('home')}}"><img src="{{ asset('azma/images/logo.png') }}" alt="" /></a>
				</div>
				
				<div class="btn-group pull-right">
					<div class="btn-group">
						<button type="button" class="btn btn-default dropdown-toggle usa" data-toggle="dropdown">
							<img src="{{(asset('images/flag-fr.svg'))}}" alt="drapeau français" class="flag-icon"/>
							&nbsp;&nbsp;Français
							<span class="caret"></span>
						</button>
						<ul class="dropdown-menu">
							<li>
								<a href="#">
									<img src="{{(asset('images/flag-fr.svg'))}}" alt="drapeau français" class="flag-icon"/>
									&nbsp;&nbsp;Français
								</a>
							</li>
							<li>
								<a href="#">
									<img src="{{(asset('images/flag-en.svg'))}}" alt="drapeau français" class="flag-icon"/>
									&nbsp;&nbsp;Anglais 
								</a>
							</li>
						</ul>
					</div>
					
				</div>
			</div>
			<div class="col-sm-8">
				<div class="shop-menu pull-right">
					<ul class="nav navbar-nav">
						<li><a href="#"><i class="fa fa-user"></i>{% trans %}account{% endtrans %}</a></li>
						<li><a href="#"><i class="fa fa-star"></i>{% trans %}wishlist{% endtrans %}</a></li>
						<li class="cartLi">
							<a href="{{path('showCart')}}">
								<i class="fa fa-shopping-cart"></i>
								{{ "cart"|trans}}
								{% if config.cartNbItems %}
									{% set display = "display: block" %}
								{% else %}
									{% set display = "display: none" %}
								{% endif %}
								<div id="cartNbItems" style="{{ display }}">{{config.cartNbItems}}</div>
							</a>
						</li>
						<li><a href="login.html"><i class="fa fa-lock"></i>{% trans %}login{% endtrans %}</a></li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div><!--/header-middle-->

